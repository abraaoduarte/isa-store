{
    "restartable": "rs",
    "execMap": {
        "ts": "ts-node"
    },
    "ignore": [
        ".git",
        "node_modules"
    ],
    "watch": ["src"],
    "delay": "1000",
    "ext": "ts,json,js",
    "exec": "ts-node -r tsconfig-paths/register -r ts-node/register/transpile-only src/index.ts"
}